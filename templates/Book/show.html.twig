{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.Book_details'|trans({'%id%': Book.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.Bookask_details'|trans({'%id%': Book.id|default('')}) }}</h1>
    {% if Book is defined and Book|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.id'|trans }}</dt>
            <dd>{{ Book.id }}</dd>
            <dt>{{ 'label.created_at'|trans }}</dt>
            <dd>{{ Book.createdAt|date('Y/m/d') }}</dd>
            <dt>{{ 'label.updated_at'|trans }}</dt>
            <dd>{{ Book.updatedAt|date('Y/m/d') }}</dd>
            <dt>{{ 'label.title'|trans }}</dt>
            <dd>{{  Book.title }}</dd>
        </dl>
        <p>
            <a href="{{ url('Book_index') }}" title="{{ 'action.back_to_list'|trans }}">
                {{ 'action.back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}